---
import Head from "@components/Head.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Pagefind from "@components/PageFind.astro";
import { SITE } from "@consts";

type Props = {
  title: string;
  description: string;
  image?: string;
  publishedDate?: Date;
  isArticle?: boolean;
};

const { title, description, image, publishedDate, isArticle } = Astro.props;

// Remove "Ethereal news " prefix to avoid redundancy in page title
const displayTitle = title.replace(/^Ethereal news /i, "");
---

<!doctype html>
<html lang="en">
  <head>
    <Head
      title={`${displayTitle} | ${SITE.TITLE}`}
      description={description}
      image={image}
      publishedDate={publishedDate}
      isArticle={isArticle}
    />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
    <Pagefind />
  </body>
</html>
