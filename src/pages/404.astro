---
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
import BackToPrevious from "@components/BackToPrevious.astro";
import { SITE } from "@consts";
---

<Layout title="404" description="The page you're looking for could not be found." noindex={true}>
  <Container>
    <div class="mt-16 grid place-items-center gap-3">
      <h1 class="animate text-2xl font-semibold text-black dark:text-white">
        404: Page not found
      </h1>
      <span class="animate">
        <BackToPrevious href="/">Go to home page</BackToPrevious>
      </span>
    </div>
  </Container>
</Layout>
