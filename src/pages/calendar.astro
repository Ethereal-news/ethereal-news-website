---
import { getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
import CalendarArrowCard from "@components/CalendarArrowCard.astro";
import { CALENDAR } from "@consts";

const currentDate = new Date(); // Get today's date

const calendar = (await getCollection("calendar"))
  .filter((calendarItem) => !calendarItem.data.draft) // Filter out draft items
  .filter((calendarItem) => calendarItem.data.date >= currentDate) // Filter out past dates
  .sort((a, b) => a.data.date.valueOf() - b.data.date.valueOf()); // Sort by date

// Build calendar subscription URLs
const icsUrl = new URL("/calendar.ics", Astro.site).toString();
const googleCalendarUrl = `https://calendar.google.com/calendar/render?cid=${encodeURIComponent(icsUrl)}`;
const appleCalendarUrl = icsUrl.replace(/^https?:\/\//, 'webcal://');
---

<Layout title={CALENDAR.TITLE} description={CALENDAR.DESCRIPTION}>
  <Container>
    <aside data-pagefind-ignore>
      <div class="space-y-10">
        <div class="animate font-semibold text-black dark:text-white">
          Calendar
        </div>
        <ul class="animate not-prose flex flex-col gap-4">
          {
            calendar.map((item) => (
              <li>
                <CalendarArrowCard entry={item} />
              </li>
            ))
          }
        </ul>
        <div class="animate flex flex-wrap gap-2 w-fit">
          <a
            href={googleCalendarUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="not-prose inline-flex items-center rounded-full bg-black/5 px-2 py-1 text-[0.7rem] font-medium text-black dark:bg-white/10 dark:text-white"
          >
            Add to Google
          </a>
          <a
            href={appleCalendarUrl}
            class="not-prose inline-flex items-center rounded-full bg-black/5 px-2 py-1 text-[0.7rem] font-medium text-black dark:bg-white/10 dark:text-white"
          >
            Add to Apple
          </a>
          <a
            href="/calendar.ics"
            download="ethereal-news-calendar.ics"
            class="not-prose inline-flex items-center rounded-full bg-black/5 px-2 py-1 text-[0.7rem] font-medium text-black dark:bg-white/10 dark:text-white"
          >
            Download ICS
          </a>
        </div>
      </div>
    </aside>
  </Container>
</Layout>
