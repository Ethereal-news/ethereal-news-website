---
import Container from "@components/Container.astro";
import { SITE } from "@consts";
import BackToTop from "@components/BackToTop.astro";
---

<footer class="animate">
  <Container>
    <div class="flex flex-wrap items-center justify-between gap-4">
      <div>&copy; {new Date().getFullYear()} â€¢ {SITE.TITLE}</div>
      <BackToTop />
    </div>
    <ul class="not-prose mt-2 flex items-center gap-3">
      <li>
        <a
          href="https://x.com/EtherealnewsHQ"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Ethereal news on X"
          class="text-black/50 transition-colors duration-300 ease-in-out hover:text-black dark:text-white/50 dark:hover:text-white"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M4 4l11.733 16h4.267l-11.733 -16z" />
            <path d="M4 20l6.768 -6.768m2.46 -2.46l6.772 -6.772" />
          </svg>
        </a>
      </li>
      <li>
        <a
          href="https://github.com/Ethereal-news/ethereal-news-website"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Ethereal news on GitHub"
          class="text-black/50 transition-colors duration-300 ease-in-out hover:text-black dark:text-white/50 dark:hover:text-white"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"/>
          </svg>
        </a>
      </li>
      <li>
        <a
          href="/rss.xml"
          aria-label="RSS Feed"
          class="text-black/50 transition-colors duration-300 ease-in-out hover:text-black dark:text-white/50 dark:hover:text-white"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M4 11a9 9 0 0 1 9 9"></path>
            <path d="M4 4a16 16 0 0 1 16 16"></path>
            <circle cx="5" cy="19" r="1"></circle>
          </svg>
        </a>
      </li>
    </ul>
  </Container>
</footer>
