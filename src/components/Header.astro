---
import Container from "@components/Container.astro";
import Link from "@components/Link.astro";
import HamburgerMenu from "@components/HamburgerMenu.astro";
import KiteIcon from "@components/KiteIcon.astro";
import ThemeToggle from "@components/ThemeToggle.astro";
import { SITE } from "@consts";

const pathname = Astro.url.pathname;
---

<header>
  <Container>
    <div class="flex flex-wrap justify-between gap-y-2">
      <Link href="/" underline={false}>
        <div class="flex items-center gap-2 font-semibold">
          <KiteIcon />
          {SITE.TITLE}
        </div>
      </Link>
      <nav class="hidden items-center gap-6 text-sm md:flex">
        <a href="/archive" class={`nav-link ${pathname.startsWith('/archive') || pathname.match(/^\/\d{4}\//) ? 'nav-link-active' : ''}`}>archive</a>
        <a href="/calendar" class={`nav-link ${pathname.startsWith('/calendar') ? 'nav-link-active' : ''}`}>calendar</a>
        <a href="/resources" class={`nav-link ${pathname.startsWith('/resources') ? 'nav-link-active' : ''}`}>resources</a>
        <a href="/about" class={`nav-link ${pathname.startsWith('/about') ? 'nav-link-active' : ''}`}>about</a>
        <div class="flex items-center gap-3">
          <button
            id="magnifying-glass"
            aria-label="Search"
            class="flex items-center gap-1.5 text-black/60 transition-colors duration-300 ease-in-out hover:text-black dark:text-white/60 dark:hover:text-white"
          >
            <svg
              height="16"
              width="16"
              stroke-linejoin="round"
              viewBox="0 0 16 16"
              fill="currentColor"
            >
              <path
                fill-rule="evenodd"
                clip-rule="evenodd"
                d="M3.5 7C3.5 5.067 5.067 3.5 7 3.5C8.933 3.5 10.5 5.067 10.5 7C10.5 7.88461 10.1718 8.69256 9.63058 9.30876L9.30876 9.63058C8.69256 10.1718 7.88461 10.5 7 10.5C5.067 10.5 3.5 8.933 3.5 7ZM9.96544 11.0261C9.13578 11.6382 8.11014 12 7 12C4.23858 12 2 9.76142 2 7C2 4.23858 4.23858 2 7 2C9.76142 2 12 4.23858 12 7C12 8.11014 11.6382 9.13578 11.0261 9.96544L14.0303 12.9697L14.5607 13.5L13.5 14.5607L12.9697 14.0303L9.96544 11.0261Z"
              ></path>
            </svg>
            <span class="text-xs">search</span>
          </button>
          <ThemeToggle />
        </div>
      </nav>
      <div class="md:hidden">
        <HamburgerMenu />
      </div>
    </div>
  </Container>
</header>
