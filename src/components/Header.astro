---
import Container from "@components/Container.astro";
import Link from "@components/Link.astro";
import HamburgerMenu from "@components/HamburgerMenu.astro";
import KiteIcon from "@components/KiteIcon.astro";
import ThemeToggle from "@components/ThemeToggle.astro";
import { SITE } from "@consts";

const pathname = Astro.url.pathname;
---

<header>
  <Container>
    <div class="flex flex-wrap justify-between gap-y-2">
      <Link href="/" underline={false}>
        <div class="flex items-center gap-2 font-semibold">
          <KiteIcon />
          {SITE.TITLE}
        </div>
      </Link>
      <nav class="hidden items-center gap-6 text-sm md:flex">
        <a href="/calendar/" class={`nav-link ${pathname.startsWith('/calendar') ? 'nav-link-active' : ''}`}>calendar</a>
        <a href="/about/" class={`nav-link ${pathname.startsWith('/about') ? 'nav-link-active' : ''}`}>about</a>
        <div class="relative" id="more-dropdown">
          <button
            id="more-btn"
            class={`nav-link inline-flex items-center gap-0.5 cursor-pointer ${pathname.startsWith('/archive') || pathname.match(/^\/\d{4}\//) || pathname.startsWith('/leaderboard') || pathname.startsWith('/resources') ? 'nav-link-active' : ''}`}
          >
            more
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-3.5">
              <path fill-rule="evenodd" d="M5.22 8.22a.75.75 0 0 1 1.06 0L10 11.94l3.72-3.72a.75.75 0 1 1 1.06 1.06l-4.25 4.25a.75.75 0 0 1-1.06 0L5.22 9.28a.75.75 0 0 1 0-1.06Z" clip-rule="evenodd" />
            </svg>
          </button>
          <div
            id="more-menu"
            class="absolute right-0 top-full mt-2 min-w-[160px] rounded-lg border border-black/15 bg-neutral-100 py-1 shadow-lg dark:border-white/20 dark:bg-neutral-900 transition-all duration-200 ease-out opacity-0 scale-95 pointer-events-none"
          >
            <a href="/archive/" class="flex px-3 py-2.5 text-sm transition-colors duration-300 hover:bg-black/5 hover:text-black dark:hover:bg-white/5 dark:hover:text-white">archive</a>
            <a href="/leaderboard/" class="flex px-3 py-2.5 text-sm transition-colors duration-300 hover:bg-black/5 hover:text-black dark:hover:bg-white/5 dark:hover:text-white">leaderboard</a>
            <a href="/resources/" class="flex px-3 py-2.5 text-sm transition-colors duration-300 hover:bg-black/5 hover:text-black dark:hover:bg-white/5 dark:hover:text-white">resources</a>
          </div>
        </div>
        <div class="flex items-center gap-3">
          <button
            id="magnifying-glass"
            aria-label="Search"
            class="flex items-center gap-1.5 text-black/60 transition-colors duration-300 ease-in-out hover:text-black dark:text-white/60 dark:hover:text-white"
          >
            <svg
              height="16"
              width="16"
              stroke-linejoin="round"
              viewBox="0 0 16 16"
              fill="currentColor"
            >
              <path
                fill-rule="evenodd"
                clip-rule="evenodd"
                d="M3.5 7C3.5 5.067 5.067 3.5 7 3.5C8.933 3.5 10.5 5.067 10.5 7C10.5 7.88461 10.1718 8.69256 9.63058 9.30876L9.30876 9.63058C8.69256 10.1718 7.88461 10.5 7 10.5C5.067 10.5 3.5 8.933 3.5 7ZM9.96544 11.0261C9.13578 11.6382 8.11014 12 7 12C4.23858 12 2 9.76142 2 7C2 4.23858 4.23858 2 7 2C9.76142 2 12 4.23858 12 7C12 8.11014 11.6382 9.13578 11.0261 9.96544L14.0303 12.9697L14.5607 13.5L13.5 14.5607L12.9697 14.0303L9.96544 11.0261Z"
              ></path>
            </svg>
            <span class="text-xs">search</span>
          </button>
          <ThemeToggle />
        </div>
      </nav>
      <div class="md:hidden">
        <HamburgerMenu />
      </div>
    </div>
  </Container>
</header>

<script>
  function setupMoreDropdown() {
    const btn = document.getElementById("more-btn");
    const menu = document.getElementById("more-menu");
    if (!btn || !menu) return;

    let isOpen = false;

    function open() {
      isOpen = true;
      menu!.classList.remove("opacity-0", "scale-95", "pointer-events-none");
      menu!.classList.add("opacity-100", "scale-100", "pointer-events-auto");
    }

    function close() {
      isOpen = false;
      menu!.classList.add("opacity-0", "scale-95", "pointer-events-none");
      menu!.classList.remove("opacity-100", "scale-100", "pointer-events-auto");
    }

    btn.addEventListener("click", () => {
      if (isOpen) close(); else open();
    });

    document.addEventListener("click", (e) => {
      if (!btn.contains(e.target as Node) && !menu.contains(e.target as Node)) {
        close();
      }
    });

    document.addEventListener("keydown", (e) => {
      if (e.key === "Escape" && isOpen) close();
    });
  }

  setupMoreDropdown();
  document.addEventListener("astro:after-swap", setupMoreDropdown);
</script>
